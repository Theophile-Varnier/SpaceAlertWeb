@model SpaceAlert.Web.Models.GameViewModel
@{
    ViewBag.Title = "WaitingRoom";
}

<div class="row">
    <div class="col-xs-12">
        <div class="col-xs-3 no-padding"></div>
        <div class="col-xs-9">
            <h2>Création d'une partie</h2>
            <h4>En attente de joueurs...</h4>
        </div>
        <div class="col-xs-3 no-padding">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="panel-title">Paramètres de la partie</div>
                </div>
                <div class="panel-body">
                    <p><strong>Type : </strong>@Model.TypeMission</p>
                    <p><strong>Nombre de joueurs : </strong>@Model.NbJoueurs</p>
                    <p><strong>Nombre d'androids : </strong>@Model.NbAndroids</p>
                    <p><strong>Menaces : </strong></p>
                    <p>
                        @if (Model.Blanches)
                        {
                            <span class="glyphicon glyphicon-ok text-success"></span>
                        }
                        else
                        {
                            <span class="glyphicon glyphicon-remove text-danger"></span>
                        }
                        <span> Blanches</span>
                    </p>
                    <p>
                        @if (Model.Jaunes)
                        {
                            <span class="glyphicon glyphicon-ok text-success"></span>
                        }
                        else
                        {
                            <span class="glyphicon glyphicon-remove text-danger"></span>
                        }
                        <span> Jaunes</span>
                    </p>
                    <p>
                        @if (Model.Rouges)
                        {
                            <span class="glyphicon glyphicon-ok text-success"></span>
                        }
                        else
                        {
                            <span class="glyphicon glyphicon-remove text-danger"></span>
                        }
                        <span> Rouges</span>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
